<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="bg-white p-4 rounded-lg">  
      <div class="relative">
        <label class="bg-white pt-0 pr-2 pb-0 pl-2 -mt-3 mr-0 mb-0 ml-2 font-medium text-gray-600 absolute">
          Name
        </label>
        <span 
          class="
            border placeholder-gray-400 focus:outline-none focus:border-black w-full pt-4 pr-4 pb-4 
            pl-4 mt-2 mr-0 mb-0 ml-0 text-base block bg-whiteborder-gray-300 rounded-md
          " 
        >
          <%= @friend.first_name + " " + @friend.last_name %>
        </span>
      </div>
      <div class="relative">
        <label class="bg-white pt-0 pr-2 pb-0 pl-2 -mt-3 mr-0 mb-0 ml-2 font-medium text-gray-600 absolute">
          E-mail
        </label>
        <span 
          class="
            border placeholder-gray-400 focus:outline-none focus:border-black w-full pt-4 pr-4 pb-4 
            pl-4 mt-2 mr-0 mb-0 ml-0 text-base block bg-whiteborder-gray-300 rounded-md
          " 
        >
          <%= @friend.email %>
        </span>
      </div>
      <div class="relative">
        <label class="bg-white pt-0 pr-2 pb-0 pl-2 -mt-3 mr-0 mb-0 ml-2 font-medium text-gray-600 absolute">
          Phone
        </label>
        <span 
          class="
            border placeholder-gray-400 focus:outline-none focus:border-black w-full pt-4 pr-4 pb-4 
            pl-4 mt-2 mr-0 mb-0 ml-0 text-base block bg-whiteborder-gray-300 rounded-md
          " 
        >
          <%= @friend.phone %>
        </span>
      </div>
    </div>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this friend", friend_path(@friend), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to "Back to friends", friends_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
